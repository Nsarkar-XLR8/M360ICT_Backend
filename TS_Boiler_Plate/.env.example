# =============================================================
# .env.example – HR Management API
# Copy this file to .env and fill in your actual values.
# Generate secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# =============================================================

# ── Server ────────────────────────────────────────────────────
NODE_ENV=development
PORT=5001
TRUST_PROXY=false

# ── MySQL Database ────────────────────────────────────────────
# Local dev: use the values matching docker-compose.yml
# Production: use your hosted MySQL connection details
DB_HOST=localhost
DB_PORT=3306
DB_USER=hr_user
DB_PASSWORD=hr_password
DB_NAME=hr_management

# (Used only by docker-compose.yml for the MySQL root account)
DB_ROOT_PASSWORD=rootpassword

# ── Authentication (JWT) ──────────────────────────────────────
# Min 32 characters. Use the crypto command above to generate.
JWT_SECRET=your_super_secret_jwt_key_min_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_min_32_characters
JWT_REFRESH_EXPIRES_IN=30d

# ── Security ──────────────────────────────────────────────────
BCRYPT_SALT_ROUNDS=10

# ── Cloudinary (file / photo uploads) ────────────────────────
# Create a free account at https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ── Email (optional – for notifications) ─────────────────────
# Gmail: generate an App Password at https://myaccount.google.com/apppasswords
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_16_character_app_password
ADMIN_EMAIL=admin@example.com

# ── Password Reset (optional) ────────────────────────────────
# RESET_PASSWORD_TOKEN_SECRET=your_reset_token_secret
# RESET_EXPIRES_IN=15m
# RESET_PASSWORD_URL=http://localhost:3000/reset-password

# ── Frontend URL (optional) ───────────────────────────────────
# FRONT_END_URL=http://localhost:3000

# ── API Documentation ─────────────────────────────────────────
# Set to "false" in production to disable /api-docs
SWAGGER_ENABLED=true

# ── Swagger / App Info (optional) ────────────────────────────
# APP_NAME=HR Management API
# APP_VERSION=1.0.0
# BASE_URL=http://localhost:5001

# ── OpenTelemetry (optional – for distributed tracing) ───────
# OTEL_SERVICE_NAME=hr-management-api
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
# OTEL_TRACES_EXPORTER=otlp

# ── Stripe (optional – if adding payments) ───────────────────
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_ADMIN_SECRET=whsec_your_webhook_secret

# ── AES Encryption (optional – for sensitive field encryption) 
# AES_KEY=your_32_character_aes_key
# AES_IV=your_16_character_initialization_vector
